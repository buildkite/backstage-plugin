{
  "extends": "@backstage/cli/config/tsconfig.json",
  "include": [
    "src",
    "dev"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/setupTests.ts",
    "dev/**/*"
  ],
  "compilerOptions": {
    "outDir": "dist-types",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
}
